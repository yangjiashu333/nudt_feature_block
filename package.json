{
  "name": "nutd-feature-block",
  "version": "1.0.0",
  "description": "NUTD Feature Block - A full-stack application with React frontend and Express backend",
  "private": true,
  "packageManager": "pnpm@10.8.0",
  "scripts": {
    "dev": "pnpm --parallel run dev",
    "build": "pnpm --recursive run build",
    "lint": "pnpm --recursive run lint",
    "lint:fix": "pnpm --recursive run lint:fix",
    "format": "pnpm --recursive run format",
    "format:check": "pnpm --recursive run format:check",
    "clean": "pnpm --recursive exec -- rm -rf node_modules dist build",
    "web:dev": "pnpm --filter @nutd/web run dev",
    "web:build": "pnpm --filter @nutd/web run build",
    "server:dev": "pnpm --filter @nutd/server run dev",
    "server:build": "pnpm --filter @nutd/server run build",
    "server:start": "pnpm --filter @nutd/server run start"
  },
  "keywords": [
    "react",
    "express",
    "typescript",
    "pnpm-workspace"
  ],
  "author": "",
  "license": "ISC"
}
